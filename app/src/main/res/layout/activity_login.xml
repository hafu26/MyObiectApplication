<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/flight_login2"
    android:orientation="vertical"
    tools:context="demo.isoft.com.myobiectapplication.LoginActivity">

    <RelativeLayout
        android:id="@+id/login_partFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal">

        <demo.isoft.com.myobiectapplication.CircleImageView
            android:scaleType="fitXY"
            android:id="@+id/longin_userName_Image"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:src="@mipmap/user_image" />

        <TextView
            android:id="@+id/login_partFirst_textVIew"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:layout_below="@id/longin_userName_Image"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/light_green_nomal"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_partFirst"
        android:layout_margin="25dp"
        android:background="@drawable/login_content_part"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:id="@+id/login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_phone_image"
                android:background="@mipmap/phone"
                android:layout_marginLeft="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <EditText
                android:id="@+id/login_phone_edittext"
                android:textColorHint="#FFC0BBBB"
                android:background="@null"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_toRightOf="@id/login_phone_image"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="电话号码" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="15dp"
            android:id="@+id/login_phone_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#625f5f"
            android:orientation="horizontal"></LinearLayout>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:id="@+id/login_passwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_passwd_image"
                android:background="@mipmap/passwd"
                android:layout_marginLeft="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <EditText
                android:id="@+id/login_passwd_edittext"
                android:textColorHint="#FFC0BBBB"
                android:background="@null"
                android:inputType="textPassword"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_toRightOf="@id/login_passwd_image"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="密码" />
            <ImageView
                android:id="@+id/login_passwd_visiable_image"
                android:src="@mipmap/passwdvisiable"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/login_passwd_edittext"
                android:layout_marginLeft="160dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="15dp"
            android:id="@+id/login_passwd_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#625f5f"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <CheckBox
                android:id="@+id/login_remember_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="记住密码"

                android:textColorHint="#aaa9a9" />

            <Button
                android:textColorHint="#aaa9a9"
                android:id="@+id/login_forget_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码" />
        </LinearLayout>

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_button"
            android:text="登录" />
    </LinearLayout>


</LinearLayout>
